<script>
firebase.initializeApp({
  databaseURL: "https://project-ae5d7.firebaseio.com/"
});

const database = firebase.database();
//console.log(database);
//database.ref().set('h1');
var txt = document.getElementById("txt");
var send = document.getElementById("send");
var list = document.getElementById("list");

// todos
var todos = firebase.database().ref('todos');
//todos.push({content:'今天要記得刷牙'});

// 按送出按鈕，可以寫入資料庫
send.addEventListener('click',function(e){
    console.log(txt.value);
    if(txt.value===""){
        alert("請輸入內容");
    }else{
        todos.push({content: txt.value});
    } 
})

//顯示內容出來
todos.on('value',function(snapshot){
    var str = '';
    var data = snapshot.val();
    for(var item in data){
        //str+='<li>'+data[item].content+'</li>'
        //str+='<li data-key="'+item+'">'+data[item].content+'</li>'
        str+='<li ><input type="checkbox">'+data[item].content+'<input type="button" id="button" data-key="'+item+'" value="刪除"></li>'
    }
    list.innerHTML = str;
})
//刪除邏輯
list.addEventListener('click',function(e){
    if(e.target.nodeName="li"){
        var key = e.target.dataset.key;
        todos.child(key).remove();
    }

})


</script>
